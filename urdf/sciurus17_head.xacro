<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="sciurus17_head">

    <joint name="${NAME_JOINT_NECK_1}" type="revolute">
      <parent link="${NAME_LINK_BODY}" />
      <child link="${NAME_LINK_NECK_1}" />
      <origin xyz="0.08083 0.0 0.3395" rpy="0 0 0"/>
      <limit 
        lower="${JOINT_NECK_1_LOWER_LIMIT}" 
        upper="${JOINT_NECK_1_UPPER_LIMIT}" 
        effort="${EFFORT_LIMIT}" 
        velocity="${VELOCITY_LIMIT}"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="1.0e-6" friction="0.8"/>
    </joint>

    <link name="${NAME_LINK_NECK_1}">
      <visual>
        <geometry>
          <mesh filename="package://sciurus17_description/meshes/visual/Neck1.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="${COLOR_LINK_HEAD}"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://sciurus17_description/meshes/collision/Neck1.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="-0.022e-03 0.029e-03 40.86e-03"/>
        <inertia ixx="63143.268e-09" ixy="-0.078e-09" ixz="-126.072e-09" iyy="66522.419e-09" iyz="187.375e-09" izz="32744.236e-09"/>
        <mass value="168.0e-03"/>
      </inertial>
    </link>

    <joint name="${NAME_JOINT_NECK_2}" type="revolute">
      <parent link="${NAME_LINK_NECK_1}" />
      <child link="${NAME_LINK_NECK_2}" />
      <origin xyz="0.0 0.0 0.054" rpy="0 0 0"/>
      <limit 
        lower="${JOINT_NECK_2_LOWER_LIMIT}" 
        upper="${JOINT_NECK_2_UPPER_LIMIT}" 
        effort="${EFFORT_LIMIT}" 
        velocity="${VELOCITY_LIMIT}"/>
      <axis xyz="0 -1 0"/>
      <dynamics damping="1.0e-6" friction="0.8"/>
    </joint>

    <link name="${NAME_LINK_NECK_2}">
      <visual>
        <origin rpy="1.5708 0 0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://sciurus17_description/meshes/visual/Neck2.stl" scale="1.0 1.0 1.0"/>
        </geometry>
        <material name="${COLOR_LINK_HEAD}"/>
      </visual>
      <collision>
        <origin rpy="1.5708 0 0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://sciurus17_description/meshes/collision/Neck2.stl" scale="1.0 1.0 1.0"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="1.5708 0 0" xyz="19.979e-03 -0.151e-03 78.687e-03"/>
        <inertia ixx="964350.46e-09" ixy="-56112.026e-09" ixz="-731.103e-09" iyy="1027677.585e-09" iyz="1684.659e-09" izz="1065891.198e-09"/>
        <mass value="312.172e-03"/>
      </inertial>
    </link>

    <joint name="${NAME_JOINT_CAMERA}" type="fixed">
      <parent link="${NAME_LINK_NECK_2}" />
      <child link="${NAME_LINK_CAMERA}" />
      <origin xyz="0.081785 0.020 0.091" rpy="0 0 0"/>
    </joint>

    <link name="${NAME_LINK_CAMERA}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.002" radius="0.003"/>
        </geometry>
        <material name="${COLOR_LINK_CAMERA}"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.002" radius="0.003"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${NAME_LINK_NECK_1}">
      <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="${NAME_LINK_NECK_2}">
      <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="${NAME_LINK_CAMERA}">
      <material>Gazebo/Black</material>
    </gazebo>

  </xacro:macro>

</robot>
